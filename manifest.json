{
  "manifest_version": 3,
  "name": "Cortex Cookie Manager",
  "version": "1.0",
  "description": "Copy SESSION and XSRF-TOKEN cookies from staging to local environment",
  "permissions": ["cookies", "notifications"],
  "host_permissions": [
    "https://app.staging.getcortexapp.com/*",
    "https://api.staging.getcortexapp.com/*",
    "https://*.getcortexapp.com/*",
    "http://app.local.getcortexapp.com:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Copy Cookies to Local"
  }
}
